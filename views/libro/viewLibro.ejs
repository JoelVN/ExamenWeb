<%- include('../compartido/estilos-generales/estilos-generales-compartidos')%>

<a href="/logout">
    <button>Logout</button>
</a>

<a href="/libro/vista/crear">
    <button>Crear</button>
</a>
<%if(typeof parametrosConsulta != 'undefined'){%>
    <p>MENSAJE: <%=parametrosConsulta.mensaje%></p>
<%}%>

<form action="/libro/vista/principal"
method="GET">
    <label for="busqueda">Busqueda</label>
    <input id="busqeuda" type="text" name="busqueda">
    <button type="submit">Buscar</button>
</form>
<table>
    <tr>
        <th>Nombre</th>
        <th>Autor</th>
        <th>Precio</th>
        <th>Editorial</th>
        <th>Fecha</th>
        <th>Acciones</th>
    </tr>
    <% arregloLibro.forEach((objeto)=>{%>
    <tr>
        <td><%=objeto.nombreLibro%></td>
        <td><%=objeto.nombreAutor%></td>
        <td><%=objeto.precio%></td>
        <td><%=objeto.editorial%></td>
        <td><%=objeto.fechaPublicacion%></td>
        <td>

            <a href="/libro/vista/editar/<%= objeto.id%>">
                <button>Editar</button>
            </a>
            <form action="/libro/eliminarDesdeVista/<%= objeto.id %>"
                  method="POST"
            >
                <button type="submit">Eliminar</button>
            </form>

        </td>
    </tr>
    <%})%>
</table>